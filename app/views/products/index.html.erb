<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2><%= t('activerecord.text.instances_list', model: Product.model_name.human) %></h2>
        <ol class="breadcrumb">
            <li>
                <%= link_to t('text.home'), root_path %>
            </li>
            <li class="active">
                <strong><%= t('activerecord.text.instances_list', model: Product.model_name.human) %></strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2"></div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12 m-b-md">
              <%= link_to fa_icon('plus', text: t('activerecord.text.new_instance', model: Product.model_name.human)), new_product_path, class: 'btn btn-primary btn-w-m', method: :get if can? :manage_customer_service_info, Product %>
              <%= link_to fa_icon('upload', text: t('从 Excel 批量导入')), import_products_path, class: 'btn btn-white', method: :get %>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-10">
            <div class="ibox">
                <div class="ibox-content">
                    <div class="table-responsive">
                        <%= render partial: 'products_grid' %>
                        <%= link_to(fa_icon('file-excel-o', text: t('buttons.download_as_excel')), products_path(@query_params.merge(format: :xls)), class: 'btn btn-white') if false %>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>搜索</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content" style="display: block;">
                    <%= render 'search_form' %>
                </div>
            </div>
        </div>
    </div>

</div>
