<div class="row">
    <div class="col-lg-12">
        <div class="m-b-md">
            <div class="">
                <%= link_to fa_icon('pencil', text: '修改费用信息'), edit_product_path(@product, tab: @current_tab), class: 'btn btn-white btn-sm' %>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-5">
        <dl class="dl-horizontal">

            <dt><%= t('activerecord.attributes.product.fee_calculation_standard') %>:</dt>
            <dd><%= @product.fee_calculation_standard %></dd>
            <dt><%= t('activerecord.attributes.product.trustor_fee_ratio') %>:</dt>
            <dd><%= @product.trustor_fee_ratio %></dd>
            <dt><%= t('activerecord.attributes.product.operation_fee_ratio') %>:</dt>
            <dd><%= @product.operation_fee_ratio %></dd>
            <dt><%= t('activerecord.attributes.product.bonus') %>:</dt>
            <dd><%= @product.bonus %></dd>
            <dt><%= t('activerecord.attributes.product.sales_fee_ratio') %>:</dt>
            <dd><%= @product.sales_fee_ratio %></dd>

        </dl>
    </div>
    <div class="col-lg-7">
        <dl class="dl-horizontal">

          <dt><%= t('activerecord.attributes.product.management_fee_ratio') %>:</dt>
          <dd><%= @product.management_fee_ratio %> </dd>
          <dt><%= t('activerecord.attributes.product.management_fee_flour') %>:</dt>
          <dd><%= @product.management_fee_flour %> </dd>
          <dt><%= t('activerecord.attributes.product.consultant_fee_ratio') %>:</dt>
          <dd><%= @product.consultant_fee_ratio %> </dd>
          <dt><%= t('activerecord.attributes.product.consultant_fee_flour') %>:</dt>
          <dd><%= @product.consultant_fee_flour %> </dd>

        </dl>
    </div>
</div>
