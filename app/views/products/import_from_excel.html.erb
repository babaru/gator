<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>从 Excel 文件批量导入资管产品信息</h2>
        <ol class="breadcrumb">
            <li>
                <%= link_to t('text.home'), root_path %>
            </li>
            <li class="active">
                <strong>批量导入资管产品信息</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <%= t('labels.all_required') %>
                    <div class="ibox-tools">
                    </div>
                </div>
                <div class="ibox-content">
                    <%= simple_form_for(@product, html: { class: 'form-horizontal' }) do |f| %>
                      <%= f.error_notification %>

                    <div class="row">
                        <div class="col-lg-6">
                            <%= f.input :name, input_html: {autocomplete: 'off'} %>
                            <%= f.input :short_name, input_html: {autocomplete: 'off'} %>
                            <%= f.input :code, input_html: {autocomplete: 'off'} %>
                            <%= f.input :client_code, input_html: {autocomplete: 'off'} %>
                            <%= f.input :initial_fund, input_html: {autocomplete: 'off'} %>
                        </div>
                        <div class="col-lg-6">
                            <%= f.input :category, collection: Product.categories, as: :radio_buttons %>
                            <%= f.input :rd_category, collection: Product.rd_categories, as: :radio_buttons %>
                            <%= f.input :status, collection: Product.statuses, as: :radio_buttons %>
                            <%= f.input :liquidated_at, as: :date_picker %>
                        </div>
                    </div>

                    <div class="hr-line-dashed"></div>

                    <div class="form-group">
                        <div class="pull-right m-r-md">
                            <%= f.submit t('buttons.save'), class: 'btn btn-primary btn-w-m' %>
                        </div>
                        <div class="m-l-md">
                          <%= link_to t('buttons.back'), products_path, class: 'btn btn-white' %>
                        </div>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
