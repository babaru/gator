<%= simple_form_for(@product, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

<div class="row">
    <div class="col-lg-6">
        <%= f.input :szse_gateway, input_html: {autocomplete: 'off'} %>
    </div>
    <div class="col-lg-6">
        <%= f.input :dce_gateway, input_html: {autocomplete: 'off'} %>
    </div>
</div>
<div class="hr-line-dashed"></div>
<div class="row">
    <div class="col-lg-6">
        <%= f.input :sse_account_code, input_html: {autocomplete: 'off'} %>
        <%= f.input :szse_account_code, input_html: {autocomplete: 'off'} %>
        <%= f.input :cffex_account_code, input_html: {autocomplete: 'off'} %>
    </div>
    <div class="col-lg-6">
        <%= f.input :zce_account_code, input_html: {autocomplete: 'off'} %>
        <%= f.input :dce_account_code, input_html: {autocomplete: 'off'} %>
        <%= f.input :shfe_account_code, input_html: {autocomplete: 'off'} %>
    </div>
</div>
<div class="hr-line-dashed"></div>

  <div class="form-group">
      <div class="pull-right m-r-md">
          <%= f.submit t('buttons.save'), class: 'btn btn-primary btn-w-m' %>
      </div>
      <div class="m-l-md">
        <%= link_to t('buttons.back'), url_for(:back), class: 'btn btn-white' %>
      </div>
  </div>
<% end %>
