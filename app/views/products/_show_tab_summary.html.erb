<div class="row">
    <div class="col-lg-12">
        <div class="m-b-md">
            <div class="">
                <%= link_to fa_icon('pencil', text: '修改费用信息'), nil, class: 'btn btn-white btn-sm' %>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-5">
        <dl class="dl-horizontal">
            <dt><%= t('activerecord.attributes.product.staff') %>:</dt>
            <dd><%= @product.staff.name if @product.staff %> </dd>
            <dt><%= t('activerecord.attributes.product.name') %>:</dt>
            <dd><%= @product.name %></dd>
            <dt><%= t('activerecord.attributes.product.short_name') %>:</dt>
            <dd><%= @product.short_name %></dd>
            <dt><%= t('activerecord.attributes.product.code') %>:</dt>
            <dd> <%= @product.code %></dd>
        </dl>
    </div>
    <div class="col-lg-7">
        <dl class="dl-horizontal">

            <dt><%= t('activerecord.attributes.product.category') %>:</dt>
            <dd><%= @product.category %></dd>
            <dt><%= t('activerecord.attributes.product.rd_category') %>:</dt>
            <dd> <%= @product.rd_category %></dd>
            <dt><%= t('activerecord.attributes.product.initial_fund') %>:</dt>
            <dd> <%= @product.initial_fund %></dd>
        </dl>
    </div>
</div>

<div class="row">
    <div class="col-lg-5">
        <dl class="dl-horizontal">

            <dt><%= t('activerecord.attributes.product.delegation_started_at') %>:</dt>
            <dd><%= @product.delegation_started_at.strftime('%Y-%m-%d') if @product.delegation_started_at %></dd>
            <dt><%= t('activerecord.attributes.product.delegation_ended_at') %>:</dt>
            <dd><%= @product.delegation_ended_at.strftime('%Y-%m-%d') if @product.delegation_ended_at %></dd>

        </dl>
    </div>
    <div class="col-lg-7">
        <dl class="dl-horizontal">
            <dt><%= t('activerecord.attributes.product.delegation_duration') %>:</dt>
            <dd><%= @product.delegation_duration %> </dd>
        </dl>
    </div>
</div>

<div class="row">
    <div class="col-lg-5">
        <dl class="dl-horizontal">

            <dt><%= t('activerecord.attributes.product.sales_department') %>:</dt>
            <dd><%= @product.sales_department.name if @product.sales_department %></dd>
            <dt><%= t('activerecord.attributes.product.consultant_reference_department') %>:</dt>
            <dd><%= @product.consultant.department.name if @product.consultant && @product.consultant.department %></dd>

        </dl>
    </div>
    <div class="col-lg-7">
        <dl class="dl-horizontal">

          <dt><%= t('activerecord.attributes.product.operation_department') %>:</dt>
          <dd><%= @product.operation_department.name if @product.operation_department %> </dd>
          <dt><%= t('activerecord.attributes.product.consultant_name') %>:</dt>
          <dd><%= @product.consultant_name if @product.consultant %> </dd>

        </dl>
    </div>
</div>

<div class="row">
    <div class="col-lg-5">
        <dl class="dl-horizontal">

            <dt><%= t('activerecord.attributes.product.trustor_name') %>:</dt>
            <dd><%= @product.trustor_bank_account.trustor.name if @product.trustor_bank_account %></dd>
            <dt><%= t('activerecord.attributes.product.trustor_bank_name') %>:</dt>
            <dd><%= @product.trustor_bank_account.bank.name if @product.trustor_bank_account %></dd>
            <dt><%= t('activerecord.attributes.product.trustor_bank_account_name') %>:</dt>
            <dd><%= @product.trustor_bank_account.name if @product.trustor_bank_account %> </dd>
            <dt><%= t('activerecord.attributes.product.trustor_bank_account_number') %>:</dt>
            <dd><%= @product.trustor_bank_account.number if @product.trustor_bank_account %> </dd>

        </dl>
    </div>
    <div class="col-lg-7">
        <dl class="dl-horizontal">

            <dt><%= t('activerecord.attributes.product.securities_broker_account_name') %>:</dt>
            <dd><%= @product.securities_broker_account.name if @product.securities_broker_account %></dd>
            <dt><%= t('activerecord.attributes.product.securities_broker_name') %>:</dt>
            <dd><%= @product.securities_broker_account.securities_broker.name if @product.securities_broker_account %></dd>
            <dt><%= t('activerecord.attributes.product.securities_broker_account_number') %>:</dt>
            <dd><%= @product.securities_broker_account.number if @product.securities_broker_account %> </dd>

        </dl>
    </div>
</div>
