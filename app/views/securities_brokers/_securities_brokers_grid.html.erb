<%= grid(@securities_brokers_grid, :show_filters => :when_filtered) do |g|

  
  g.column name: '#' do |securities_broker|
    securities_broker.id
  end
  

  
  g.column name: t('activerecord.attributes.securities_broker.name'), class: 'project-title' do |securities_broker|
      link_to(securities_broker.name, securities_broker_path(securities_broker))
  end
  

  
  g.column name: t('activerecord.attributes.time_stamp.created_at') do |securities_broker|
    securities_broker.created_at.strftime('%Y-%m-%d %H:%M:%S')
  end
  

  
  g.column name: t('activerecord.attributes.time_stamp.updated_at') do |securities_broker|
    securities_broker.updated_at.strftime('%Y-%m-%d %H:%M:%S')
  end
  

  g.column html: {class: 'project-actions'} do |securities_broker|
    [
      link_to(fa_icon("pencil"), edit_securities_broker_path(securities_broker), class: 'btn btn-white btn-xs', data: {toggle: 'tooltip'}, title: t('buttons.edit')),
      link_to(fa_icon("trash"), securities_broker_path(securities_broker), class: 'btn btn-danger btn-xs', method: :delete, data: {toggle: 'tooltip', confirm: t('confirms.delete')}, title: t('buttons.delete'))
    ].join(' ').html_safe
  end
end -%>
