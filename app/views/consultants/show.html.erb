<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2><%= t('activerecord.text.show_instance', model: Consultant.model_name.human) %></h2>
        <ol class="breadcrumb">
            <li>
                <%= link_to t('text.home'), root_path %>
            </li>
            <li class="active">
                <strong><%= t('activerecord.text.show_instance', model: Consultant.model_name.human) %></strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="ibox">
        <div class="ibox-content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="m-b-md">
                        <div class="pull-right">
                          <%= link_to fa_icon('pencil', text: t('buttons.edit')), edit_consultant_path(@consultant), class: 'btn btn-white btn-sm' %>
                        </div>

                        <h2><%= @consultant.name %></h2>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-5">
                    <dl class="dl-horizontal">
                        <dt><%= t('activerecord.attributes.consultant.short_name') %>:</dt>
                        <dd><%= @consultant.short_name %></dd>
                        <dt><%= t('activerecord.attributes.consultant.capital') %>:</dt>
                        <dd><%= @consultant.capital %></dd>
                        <dt><%= t('activerecord.attributes.consultant.person_in_charge_name') %>:</dt>
                        <dd><%= @consultant.person_in_charge_name %></dd>
                        <dt><%= t('activerecord.attributes.consultant.company_address') %>:</dt>
                        <dd><%= @consultant.company_address %></dd>
                    </dl>
                </div>
                <div class="col-lg-7">
                    <dl class="dl-horizontal">
                      <dt><%= t('activerecord.attributes.consultant.institution_type') %>:</dt>
                      <dd><%= Consultant.institution_type_names[@consultant.institution_type] %></dd>
                      <dt><%= t('activerecord.attributes.consultant.department_id') %>:</dt>
                      <dd><%= @consultant.department.name if @consultant.department %></dd>
                      <dt><%= t('activerecord.attributes.consultant.is_qualified_3rd_party_institution') %>:</dt>
                      <dd><%= @consultant.is_qualified_3rd_party_institution ? '是' : '否' %></dd>
                    </dl>
                </div>
            </div>

            <div class="row m-t-sm">
                <div class="col-lg-12">
                    <div class="panel blank-panel">
                        <div class="panel-heading">
                            <div class="panel-options">
                                <ul class="nav nav-tabs">
                                    <% @tabs.each do |tab| %>
                                    <% if @current_tab == tab %>
                                    <li class="active">
                                    <% else %>
                                    <li class="">
                                    <% end %>
                                      <%= link_to t("activerecord.attributes.consultant.tabs.#{tab}"), consultant_path(@consultant, tab: tab) %>
                                    </li>
                                    <% end %>
                                </ul>
                            </div>
                        </div>

                        <div class="panel-body">

                            <div class="tab-content">
                                <% @tabs.each do |tab| %>
                                <% if @current_tab == tab %>
                                <div class="tab-pane active">
                                <% else %>
                                <div class="tab-pane">
                                <% end %>
                                    <%= render "show_tab_#{tab}" if tab == @current_tab %>
                                </div>
                                <% end %>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
