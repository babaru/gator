<%= grid(@trustors_grid, :show_filters => :when_filtered) do |g|

  
  g.column name: '#' do |trustor|
    trustor.id
  end
  

  
  g.column name: t('activerecord.attributes.trustor.name'), class: 'project-title' do |trustor|
      link_to(trustor.name, trustor_path(trustor))
  end
  

  
  g.column name: t('activerecord.attributes.time_stamp.created_at') do |trustor|
    trustor.created_at.strftime('%Y-%m-%d %H:%M:%S')
  end
  

  
  g.column name: t('activerecord.attributes.time_stamp.updated_at') do |trustor|
    trustor.updated_at.strftime('%Y-%m-%d %H:%M:%S')
  end
  

  g.column html: {class: 'project-actions'} do |trustor|
    [
      link_to(fa_icon("pencil"), edit_trustor_path(trustor), class: 'btn btn-white btn-xs', data: {toggle: 'tooltip'}, title: t('buttons.edit')),
      link_to(fa_icon("trash"), trustor_path(trustor), class: 'btn btn-danger btn-xs', method: :delete, data: {toggle: 'tooltip', confirm: t('confirms.delete')}, title: t('buttons.delete'))
    ].join(' ').html_safe
  end
end -%>
