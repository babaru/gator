<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'm-t' }, wrapper: :inline_form) do |f| %>
    <%= f.input :login, label: false, placeholder: 'Email or username' %>
    <%= f.input :password, label: false, placeholder: 'Password' %>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-primary block full-width m-b' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
