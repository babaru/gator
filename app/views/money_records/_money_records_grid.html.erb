<%= grid(@money_records_grid, :show_filters => :when_filtered) do |g|

  
  g.column name: '#' do |money_record|
    money_record.id
  end
  

  
  g.column name: t('activerecord.attributes.money_record.done_at') do |money_record|
    money_record.done_at
  end


  
  g.column name: t('activerecord.attributes.money_record.type') do |money_record|
    money_record.type
  end


  
  g.column name: t('activerecord.attributes.money_record.amount') do |money_record|
    money_record.amount
  end


  
  g.column name: t('activerecord.attributes.money_record.staff_id') do |money_record|
    money_record.staff_id
  end


  
  g.column name: t('activerecord.attributes.money_record.product_id') do |money_record|
    money_record.product_id
  end


  
  g.column name: t('activerecord.attributes.time_stamp.created_at') do |money_record|
    money_record.created_at.strftime('%Y-%m-%d %H:%M:%S')
  end
  

  
  g.column name: t('activerecord.attributes.time_stamp.updated_at') do |money_record|
    money_record.updated_at.strftime('%Y-%m-%d %H:%M:%S')
  end
  

  g.column html: {class: 'project-actions'} do |money_record|
    [
      link_to(fa_icon("pencil"), edit_money_record_path(money_record), class: 'btn btn-white btn-xs', data: {toggle: 'tooltip'}, title: t('buttons.edit')),
      link_to(fa_icon("trash"), money_record_path(money_record), class: 'btn btn-danger btn-xs', method: :delete, data: {toggle: 'tooltip', confirm: t('confirms.delete')}, title: t('buttons.delete'))
    ].join(' ').html_safe
  end
end -%>
